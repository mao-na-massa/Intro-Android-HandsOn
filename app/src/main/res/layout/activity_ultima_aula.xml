<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UltimaAulaActivity">

    <RelativeLayout
        android:id="@+id/cabeca"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerInParent="true"
        android:background="@drawable/round_background">

        <Button
            android:id="@+id/olhoEsquerdo"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="@android:color/white"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_margin="48dp"/>

        <Button
            android:id="@+id/retinaEsquerda1"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_alignTop="@+id/olhoEsquerdo"
            android:layout_alignStart="@+id/olhoEsquerdo"
            android:layout_margin="8dp"
            android:background="@android:color/black" />

        <Button
            android:id="@+id/retinaEsquerda2"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_alignTop="@+id/olhoEsquerdo"
            android:layout_alignEnd="@+id/olhoEsquerdo"
            android:layout_margin="8dp"
            android:visibility="gone"
            android:background="@android:color/black" />

        <Button
            android:id="@+id/olhoDireito"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="@android:color/white"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="48dp"/>

        <Button
            android:id="@+id/boca"
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:layout_alignParentBottom="true"
            android:background="@android:color/holo_red_dark"
            android:layout_alignParentStart="true"
            android:layout_margin="56dp"/>

        <Button
            android:id="@+id/lingua"
            android:layout_width="22dp"
            android:layout_height="44dp"
            android:layout_alignTop="@+id/boca"
            android:background="@android:color/holo_red_dark"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/corpo"
        android:layout_width="8dp"
        android:layout_height="64dp"
        android:background="#ffff00"
        android:layout_below="@+id/cabeca"
        android:layout_centerHorizontal="true"/>

    <Button
        android:layout_width="48dp"
        android:layout_height="8dp"
        android:background="#ff00ff"
        android:layout_alignTop="@+id/corpo"
        android:layout_alignEnd="@+id/corpo"
        android:layout_marginTop="16dp"
        android:layout_marginRight="8dp"/>

    <Button
        android:layout_width="8dp"
        android:layout_height="48dp"
        android:background="#fc0f00"
        android:layout_below="@+id/corpo"
        android:layout_toLeftOf="@+id/corpo"
        android:layout_marginRight="8dp"
        android:rotation="22"/>





</RelativeLayout>